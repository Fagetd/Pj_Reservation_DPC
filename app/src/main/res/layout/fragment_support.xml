<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SupportFragment">


    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true">

        <ScrollView
            android:layout_width="700dp"
            android:layout_height="400dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="200dp"
            android:layout_marginStart="200dp"
            android:layout_marginTop="235dp"
            android:background="@color/gris"
            android:scrollbarStyle="insideInset"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="190sp"
                android:paddingTop="40sp">


                <TextView
                    android:id="@+id/tv_connexion"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="70sp"
                    android:contextClickable="true"
                    android:singleLine="true"
                    android:text="Chatellier"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="@color/black"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_prenom"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="10sp"
                    android:layout_toEndOf="@+id/tv_connexion"
                    android:layout_toRightOf="@+id/tv_connexion"
                    android:contextClickable="true"
                    android:singleLine="true"
                    android:text="Adrien"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="@color/black"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_service"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="70sp"

                    android:layout_below="@+id/tv_prenom"


                    android:text="Service Informatique" />


                <ImageView
                    android:id="@+id/iv_telephone"
                    android:layout_width="30sp"
                    android:layout_height="35sp"
                    android:layout_marginEnd="30sp"
                    android:layout_marginLeft="12sp"
                    android:layout_marginStart="12sp"
                    android:layout_marginTop="85sp"
                    android:src="@android:drawable/ic_menu_call" />

                <TextView
                    android:id="@+id/tv_numero_perso"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="10sp"
                    android:layout_marginTop="85sp"
                    android:layout_toEndOf="@+id/iv_telephone"
                    android:layout_toRightOf="@+id/iv_telephone"
                    android:contextClickable="true"
                    android:singleLine="true"
                    android:text="06.51.45.96.35"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/tv_perso"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/tv_numero_perso"
                    android:layout_marginLeft="10sp"
                    android:layout_toEndOf="@+id/iv_telephone"
                    android:layout_toRightOf="@+id/iv_telephone"
                    android:text="Mobile" />


                <TextView
                    android:id="@+id/tv_numero_travail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="10sp"
                    android:layout_marginTop="135sp"
                    android:layout_toEndOf="@+id/iv_telephone"
                    android:layout_toRightOf="@+id/iv_telephone"
                    android:contextClickable="true"
                    android:singleLine="true"
                    android:text="05.42.15.87.42"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/tv_travail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/tv_numero_travail"
                    android:layout_marginLeft="10sp"
                    android:layout_toEndOf="@+id/iv_telephone"
                    android:layout_toRightOf="@+id/iv_telephone"
                    android:text="Travail" />


                <ImageView
                    android:id="@+id/iv_enveloppe"
                    android:layout_width="25sp"
                    android:layout_height="30sp"
                    android:layout_marginEnd="30sp"
                    android:layout_marginLeft="5sp"
                    android:layout_marginStart="12sp"
                    android:layout_marginTop="215sp"
                    android:src="@drawable/ic_menu_send" />

                <TextView
                    android:id="@+id/tv_mail_travail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="5sp"
                    android:layout_marginTop="210sp"
                    android:layout_toEndOf="@+id/iv_telephone"
                    android:layout_toRightOf="@+id/iv_telephone"
                    android:contextClickable="true"
                    android:singleLine="true"
                    android:text="chatellier.adrien@dpc.fr"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/tv_mail_travail_libelle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/tv_mail_travail"
                    android:layout_marginLeft="10sp"
                    android:layout_toEndOf="@+id/iv_enveloppe"
                    android:layout_toRightOf="@+id/iv_enveloppe"
                    android:text="Travail" />

                <TextView
                    android:id="@+id/tv_mail_perso"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="10sp"
                    android:layout_marginTop="260sp"
                    android:layout_toEndOf="@+id/iv_enveloppe"
                    android:layout_toRightOf="@+id/iv_enveloppe"
                    android:contextClickable="true"
                    android:singleLine="true"
                    android:text="chatellier.adrien@gmail.fr"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/tv_mail_perso_libelle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/tv_mail_perso"
                    android:layout_marginLeft="10sp"
                    android:layout_toEndOf="@+id/iv_enveloppe"
                    android:layout_toRightOf="@+id/iv_enveloppe"
                    android:text="Personnel" />


            </RelativeLayout>
        </ScrollView>

        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="190dp"
            android:background="@color/rouge"
            android:orientation="vertical">

        </RelativeLayout>

        <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/profile_image"
            android:layout_width="175dp"
            android:layout_height="175dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:adjustViewBounds="false"
            android:cropToPadding="false"
            android:paddingBottom="8dp"
            app:border_color="@color/vert"
            app:border_width="5dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.501"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.169" />




    </android.support.constraint.ConstraintLayout>

</RelativeLayout>
